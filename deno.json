{
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "https://esm.sh/preact@10.13.2"
	},
	"fmt": {
		"options": {
			"indentWidth": 4,
			"useTabs": true,
			"lineWidth": 300,
			"proseWrap": "preserve"
		}
	},
	"tasks": {
		"dev": "deno run --watch=site/static/ --allow-env --allow-read --allow-net=0.0.0.0 main.tsx --dev"
	}
}
